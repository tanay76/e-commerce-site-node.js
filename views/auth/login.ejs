<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (!login && successMessage) { %>
            <div class="user-message user-message--success"><%= successMessage %>
                <p><button class="btn" type="button" id="ok_btn" onclick="okDone()">Ok</button></p>
            </div>
        <% } %>
        <form class="login-form" action="<%= path %>" method="POST">
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input
                    type="email" 
                    name="email" 
                    id="email">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input 
                    type="password" 
                    name="password" 
                    id="password">
            </div>
            <% if (!login) { %>
                <input type="hidden" id="userId" name="userId" value="<%= userId %>">
            <% } %>
            <input type="hidden" id="_csrf" name="_csrf" value="<%= csrfToken %>">
            <input type="hidden" id="no-error" name="noError" value="false">
            <button class="btn" id="login-btn" onclick="loginDone(event)"><% if (login) { %>Login<%} else {%>Activate Your Account<% } %></button>
        </form>
        <div class="centered">
            <a href="/reset-password">Forgot Password?</a>
        </div>
    </main>
<%- include('../includes/end.ejs') %>