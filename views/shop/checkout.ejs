<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/cart.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <ul class="cart__item-list">
                <% products.forEach(p => { %>
                    <li class="cart__item">
                        <h1><%= p.productId.title %></h1>
                        <h2>Quantity: <%= p.quantity %></h2>
                        </form>
                    </li>
                <% }) %>
            </ul>
            <hr>
            <div class="centered"><h1>TOTAL : &#8377; <%= totalSum %></h1></div>
            <hr>
            <div class="centered">
                <form action="/proceed" method="POST">
                    <input type="hidden" name="amount" value="<%= totalSum %>">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button id="order-btn" class="btn">Proceed To Pay</button>
                </form>
                <a class="btn" href="/payonDelv/null">Pay On Delivery</a>
            </div>
        </main>
        <%- include('../includes/end.ejs') %>